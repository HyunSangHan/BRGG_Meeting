<body>
	<!-- about -->
	<div class="segments-page">
		<div class="container">
			<!-- sign in -->
			<div class="sign-in segments-page">
				<div class="container">
					<div class="signin-contents">
						<div class="pages-title">
							<h3>Sign In</h3>
							<div class="line"></div>
						</div>
						<div class="row">
							<div class="col s3"></div>
							<div class="col s6">
								<form action="/signin_process" method="post">
									<input type="email" placeholder="Email">
									<input type="password" placeholder="password">
									<button class="button-full" type="submit"><i class="fa fa-send"></i>Sign in</button>
								</form>
							</div>
							<div class="col s3"></div>
						</div>
					</div>
				</div>
			</div>

			<div class="sign-up segments-page">
				<div class="container">
					<div class="signup-contents">
						<div class="pages-title">
							<h3>Sign Up</h3>
							<div class="line"></div>
						</div>
						<div class="social-login">
							<div class="row">
								<div class="col s3"></div>
								<div class="col s6">
									<a href="/sign_up"><button class="button-full"><i class="fa fa-send"></i>Sign up</button></a>
								</div>
								<div class="col s3"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- end sign in -->

		</div>
	</div>
</body>	

