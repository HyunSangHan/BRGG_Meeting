<%= erb :"/layouts/no_user_header" %>

<body>
	<!-- about -->
	<div class="segments-page">
		<!-- sign in -->
		<div class="sign-in segments-page">
			<div class="container">
				<div class="signin-contents">
					<div class="pages-title">
						<h3>로그인</h3>
						<div class="line"></div>
					</div>
					<div class="row">
						<div class="col s1"></div>
						<div class="col s10">
							<form action="/signin_process" method="post">
								<input type="email" name="email" placeholder="Email">
								<input type="password" name="password" placeholder="password">
								<button class="button-full" type="submit"><i class="fa fa-send"></i>로그인</button>
							</form>
						</div>
						<div class="col s1"></div>
					</div>
				</div>
			</div>
		</div>

		<div class="sign-up segments-page">
			<div class="container">
				<div class="signup-contents">
					<div class="pages-title">
						<h3>회원가입</h3>
						<div class="line"></div>
					</div>
					<div class="social-login">
						<div class="row">
							<div class="col s1"></div>
							<div class="col s10">
								<a href="/sign_up"><button class="button-full"><i class="fa fa-send"></i>회원가입</button></a>
							</div>
							<div class="col s1"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end sign in -->
	</div>
</body>	

<%= erb :"/layouts/footer" %>